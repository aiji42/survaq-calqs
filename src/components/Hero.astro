---
import Logo from '../components/Logo.astro'
---

<section class="hero">
  <video class="hero-img" poster="/top/calqs_top.png" muted loop autoplay playsinline>
    <source src="/top/calqs_pc_short.webm" type="video/webm" />
    <source src="/top/calqs_pc_short.mp4" type="video/mp4" />
    <source src="/top/calqs_sp_short.webm" type="video/webm" media="(max-width: 768px)" />
    <source src="/top/calqs_sp_short.mp4" type="video/mp4" media="(max-width: 768px)" />
  </video>
  <h1 class="hero-logo"><Logo /></h1>
  <a class="header-link header-link-back" href="/products"><span>PRODUCTS</span></a>
  <span class="hero-scroll"><span>Scroll</span></span>
</section>
<style>
  .hero {
    position: relative;
  }
  .hero-img {
    width: 100vw;
    height: 100vh;
    object-fit: cover;
  }
  .hero-logo {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 6%;
  }
  .header-link {
    position: absolute;
    top: 32px;
    right: 24px;
    padding: 8px 32px;
    border: 1px solid var(--black);
    border-radius: 40px;
    letter-spacing: 2px;
    overflow: hidden;
    z-index: 1;
  }
  .header-link:hover span {
    position: relative;
    color: var(--white);
  }
  .header-link-back::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    background: var(--black);
    width: 100%;
    height: 100%;
    transition: transform 0.6s cubic-bezier(0.8, 0, 0.2, 1) 0s;
    transform: scale(0, 1);
    transform-origin: right top;
  }
  .header-link-back:hover::before {
    transform-origin: left top;
    transform: scale(1, 1);
  }
  .hero-scroll {
    font-size: 16px;
    writing-mode: vertical-rl;
    letter-spacing: 4px;
    position: absolute;
    right: 56px;
    bottom: 90px;
  }
  .hero-scroll::after {
    content: '';
    display: block;
    position: absolute;
    top: 80px;
    height: 120px;
    right: 11px;
    border: 0.5px solid var(--black);
    z-index: 1;
    animation: pathmove 1.4s ease-in-out infinite;
  }
  @keyframes pathmove {
    0% {
      height: 0;
      top: 80px;
      opacity: 0;
    }
    30% {
      height: 60px;
      opacity: 1;
    }
    100% {
      height: 0;
      top: 180px;
      opacity: 0;
    }
  }
  @media (max-width: 768px) {
    .hero-logo {
      width: 240px;
      left: 50%;
      top: 70%;
      transform: translate(-50%, -50%);
    }
    .hero-scroll {
      right: 50%;
      transform: translateX(-50%);
      bottom: 140px;
    }
    .header-link {
      top: 16px;
      right: 16px;
      padding: 8px 24px;
      font-size: 12px;
    }
    .hero-scroll span {
      display: none;
    }
    .hero-scroll::after {
      right: 0;
    }
  }
</style>
