---
import Logo from './Logo.astro'
---

<div>
  <div class="back top"></div>
  <div class="back bottom"></div>
  <div class="img">
    <div class="logo">
      <Logo />
    </div>
  </div>
</div>
<style>
  .back {
    position: fixed;
    left: 0;
    width: 100%;
    height: 50%;
    background-color: var(--white);
    z-index: 100;
  }
  .top {
    top: 0;
    animation: top 0.5s ease-in 4.5s both;
  }
  .bottom {
    bottom: 0;
    animation: bottom 0.5s ease-in 4.5s both;
  }
  .img {
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    animation: fadeInImg ease-in 4.5s forwards;
    opacity: 0;
  }
  .logo {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin: auto;
  }
  @keyframes top {
    0% {
      top: 0;
    }
    100% {
      top: -100%;
    }
  }
  @keyframes bottom {
    0% {
      bottom: 0;
    }
    100% {
      bottom: -100%;
    }
  }
  @keyframes fadeInImg {
    0% {
      opacity: 0;
    }
    40% {
      opacity: 1;
    }
    75% {
      opacity: 1;
    }
    100% {
      opacity: 0;
      visibility: hidden;
    }
  }
</style>
