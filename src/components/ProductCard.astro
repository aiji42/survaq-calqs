---
import type { products } from '../constants/products'
export type Props = Pick<(typeof products)[number], 'title' | 'price' | 'code' | 'image'>

const { image, title, price, code } = Astro.props
---

<a href={`/products/${code}`} class="link">
  <img src={image} alt={title} class="img" loading="lazy" />
  <h2 class="h2">
    {title}
  </h2>
  <p class="price">
    Â¥{price.toLocaleString()} ~
  </p>
</a>
<style>
  .link {
    color: var(--black);
    text-decoration: none;
  }
  .img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 10px;
    margin-bottom: 16px;
  }
  .h2 {
    font-size: 20px;
    letter-spacing: 6px;
    margin-bottom: 16px;
    line-height: 2;
  }
  .price {
    font-size: 18px;
  }
</style>
