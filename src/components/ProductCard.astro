---
import type { products } from '../constants/products'
export type Props = Pick<(typeof products)[number], 'title' | 'price' | 'code' | 'image'>

const { image, title, price, code } = Astro.props
---

<a href={`/products/${code}`} class="link">
  <div class="img-wrap">
    <img src={image} alt={title} class="img" loading="lazy" alt="" />
  </div>
  <h2 class="h2">
    {title}
  </h2>
  <p class="price">
    Â¥{price.toLocaleString()} ~
  </p>
</a>
<style>
  .link {
    color: var(--black);
    text-decoration: none;
  }
  .link:hover img {
    transform: scale(1.1);
  }
  .img-wrap {
    width: 100%;
    height: 220px;
    border-radius: 10px;
    margin-bottom: 16px;
    overflow: hidden;
    position: relative;
    z-index: 1;
  }
  .img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 10px;
    transform: scale(1);
    transition: 0.3s ease-in-out;
  }
  .h2 {
    font-size: 20px;
    letter-spacing: 4px;
    margin-bottom: 8px;
    line-height: 2;
  }
  .price {
    font-size: 20px;
    font-weight: 300;
    letter-spacing: 1px;
  }
  @media (max-width: 768px) {
    .price {
      font-weight: 500;
    }
  }
</style>
