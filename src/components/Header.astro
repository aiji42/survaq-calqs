<header class="header">
  <a href="/">
    <img src="/logo_black.svg" class="logo" alt="CALQS" />
  </a>
  <a class="button button-back" href="/products"><span>PRODUCTS</span></a>
</header>
<style>
  .header {
    width: 100%;
    height: 90px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 40px;
    border-bottom: 1px solid var(--gray200);
  }
  .logo {
    width: 100px;
  }
  .button {
    position: relative;
    border: 1px solid var(--black);
    border-radius: 40px;
    font-size: 14px;
    letter-spacing: 2px;
    overflow: hidden;
    padding: 8px 24px;
  }
  .button:hover span {
    position: relative;
    color: var(--white);
  }
  .button-back::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    background: var(--black);
    width: 100%;
    height: 100%;
    transition: transform 0.6s cubic-bezier(0.8, 0, 0.2, 1) 0s;
    transform: scale(0, 1);
    transform-origin: right top;
  }
  .button-back:hover::before {
    transform-origin: left top;
    transform: scale(1, 1);
  }
  @media (max-width: 768px) {
    .header {
      height: 60px;
      padding: 0 16px;
    }
    .logo {
      width: 88px;
    }
    .button {
      font-size: 12px;
      padding: 4px 16px;
    }
  }
</style>
