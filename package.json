{
  "name": "survaq-calqs",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write '**/*.{ts,tsx,astro}'",
    "lint": "eslint './src/**/*.{ts,tsx,astro}' --fix --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "dependencies": {
    "astro": "^2.0.14"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
