    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "prettier-plugin-astro": "^0.8.0"
  },
  "prettier": {
    "semi": false,
    "arrowParens": "always",
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,astro}": [
      "eslint --fix --ignore-path .gitignore",
      "prettier --write"
